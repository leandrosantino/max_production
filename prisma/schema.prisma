generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Machine {
  id        Int    @id @default(autoincrement())
  slug      String @unique
  ute       String
  processId Int?

  acceptedProducts Product[]

  process Process? @relation(fields: [processId], references: [id])
}

model Product {
  id                     Int     @id @default(autoincrement())
  description            String
  cicleTime              Int
  sapCode                String  @unique
  partNumber             String? @unique
  type                   String
  project                String
  multiple               Int
  setupDurationInMinutes Int
  quantityPerPackage     Int
  line                   String
  // initialStock           Int

  wipSapCode String?
  wip        Product?  @relation("wipRelation", fields: [wipSapCode], references: [sapCode])
  finisheds  Product[] @relation("wipRelation")

  processId Int?
  process   Process? @relation(fields: [processId], references: [id])

  productionMachine Machine[]
}

model Process {
  id          Int       @id @default(autoincrement())
  description String
  type        String
  ute         String
  products    Product[]
  machines    Machine[]
  parent      Process?  @relation("dependsOn", fields: [parentId], references: [id])
  childrens   Process?  @relation("dependsOn")
  parentId    Int?      @unique
}

model Production {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  sapcode     String
  description String
  packcode    String
  quantity    Int
}

model Demand {
  id         Int      @id @default(autoincrement())
  date       DateTime
  partnumber String
  quantity   Int
}
